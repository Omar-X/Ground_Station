<Main_widget>:
    transition: slide(duration= 0.5)
    Screen:
        name: "set_up"
        FloatLayout:
            id: main_widget
            spacing:"10sp" # sp scale is better for different devices
            padding: "10sp"
            Label: # not complete
                pos_hint: {"x":0.05,"top":1}
                size_hint: (0.9, 0.35)
                text: " Ground Station"
                bold: True
                color: C('#000077')
                font_size: "45sp"

            Label:
                pos_hint: {"x":0.05,"top":0.6}
                size_hint: (0.1, 0.15)
                color: C('#000077')
                text: "IP: "
                bold: True
                font_size: "35sp"

            MY_TextInput:
                pos_hint: {"x":0.2,"top":0.6}
                size_hint: (0.7, 0.15)
                id: ip_address
                font_size: "30sp"
                halign: "center"
                hint_text_color: C('#00003388')
                hint_text: "127.0.0.1"
                multiline: False

            Label:
                pos_hint: {"x":0.05,"top":0.4}
                size_hint: (0.1, 0.15)
                color: C('#000077')
                text: "Port: "
                bold: True
                font_size: "35sp"

            MY_TextInput:
                pos_hint: {"x":0.2,"top":0.4}
                size_hint: (0.7, 0.15)
                font_size: "30sp"
                halign: "center"
                id: port_number
                hint_text_color: C('#00003388')
                hint_text: "10000"
                multiline: False

            Button:
                pos_hint: {"x":0.6,"top":0.2}
                size_hint: (0.35, 0.15)
                font_size: "30sp"
                background_color: C('#00f50000')
                text: "Connect"
                on_press:
                    root.check_connection()
                    # root.connect_to_server(ip_address.text, port_number.text)
                canvas.before:
                    Color:
                        rgba: C('#000077')
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10,]

        Button:
            pos_hint: {"x":0.1,"top":0.2}
            size_hint: (0.35, 0.15)
            font_size: "30sp"
            background_color: C('#00f50000')
            text: "Scan"
            on_press:
                root.scan_for_devices()
            canvas.before:
                Color:
                    rgba: C('#000077')
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10,]

